<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:layout_alignBaseline="@+id/editTextTextPersonName"
        android:labelFor="@+id/editTextTextPersonName"
        style="?android:attr/textAppearanceMedium"
        tools:ignore="RelativeOverlap" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:inputType="text"
        android:layout_toEndOf="@+id/txt_label"
        android:layout_toStartOf="@+id/button"
        android:autofillHints=""
        tools:ignore="LabelFor"
        android:layout_toRightOf="@+id/txt_label"
        android:layout_toLeftOf="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/revert"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/editTextTextPersonName"
        android:layout_alignParentRight="true" />

</RelativeLayout>